@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated) {
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" })) {
        @Html.AntiForgeryToken()

  
    <li class="nav-item">
        @Html.ActionLink("Olá " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
    </li>
    <li class="nav-item">
        <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Terminar Sessão</a>
    </li>
     
    }
}
else {

        <li class="nav-item nav-link" >@Html.ActionLink("Registar", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink"}) </li>
        <li class="nav-item nav-link">@Html.ActionLink("Iniciar sessão", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
 
}
